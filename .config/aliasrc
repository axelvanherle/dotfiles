# My aliases
#
# ls
alias ls="ls --color"
alias la="ls -A"
alias l="ls -l"
alias ll="ls -alF"
alias lt="ls -lt"
alias lS="ls -lS"

# git
alias ga="git add ."
alias gs="git status"
alias gp="git push"
alias gpl="git pull"
gca() {
    git commit -am "$@"
}
gc() {
    git commit -m "$@"
}
	# For dotfiles
alias config="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME"

# newsboat
alias nb="newsboat"
